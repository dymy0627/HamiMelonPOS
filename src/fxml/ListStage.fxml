<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="application.order.ListController"
	xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="100">

	<padding>
		<Insets top="25" right="25" bottom="10" left="25" />
	</padding>

	<HBox spacing="100" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
		GridPane.columnIndex="0" GridPane.rowIndex="0">
		<children>

			<Label prefHeight="30.0" prefWidth="200.0" fx:id="type" text="用餐型態"
				alignment="center_right" />

			<Label prefHeight="30.0" prefWidth="200.0" fx:id="num_people"
				text="人數" alignment="center" />

			<ComboBox fx:id="DiscountCombo" layoutX="15.0" layoutY="33.0"
				prefWidth="200.0" promptText="折扣選擇" />

		</children>
	</HBox>

	<VBox xmlns:fx="http://javafx.com/fxml" GridPane.columnIndex="0"
		GridPane.rowIndex="1" alignment="center">

		<padding>
			<Insets top="10" bottom="10" left="10" right="10" />
		</padding>
		<children>
			<ListView fx:id="menulist" />
		</children>


	</VBox>
	
	<Label GridPane.columnIndex="0" GridPane.rowIndex="2" prefHeight="30.0" prefWidth="200.0" fx:id="total_money"
				text="總價" />
				
	<HBox spacing="500" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
		GridPane.columnIndex="0" GridPane.rowIndex="3">
		<children>
			<Button prefHeight="30.0" prefWidth="200.0" fx:id="p_page"
				text="關閉" onAction="#PreviousPageButtonAction" />

			<Button prefHeight="30.0" prefWidth="200.0" fx:id="n_page"
				text="列印" onAction="#PrintButtonAction" />
		</children>
	</HBox>
</GridPane>

