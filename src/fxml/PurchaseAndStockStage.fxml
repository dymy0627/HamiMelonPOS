					<content>
						<VBox>
							<children>
								<HBox alignment="CENTER_LEFT" prefHeight="40.0">
									<children>
										<Label minHeight="-Infinity" prefHeight="40.0"
											prefWidth="160.0" text="品項">
											<padding>
												<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
