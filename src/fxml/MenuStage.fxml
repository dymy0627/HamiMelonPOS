<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.order.MenuController">
	<children>
		<BorderPane style="-fx-background-color: white;"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<stylesheets>
				<URL value="@../css/button.css" />
				<URL value="@../css/background.css" />
			</stylesheets>
			<top>
				<VBox prefWidth="100.0" BorderPane.alignment="CENTER">
					<children>
						<HBox style="-fx-background-color: black;">
							<children>
								<Label alignment="center" prefHeight="30.0"
									style="-fx-font-size: 20; -fx-background-color: black; -fx-text-fill: yellow;"
									text="      跑馬燈通知 					 現在時間 下午 09:43 " GridPane.columnIndex="0"
									GridPane.rowIndex="0" />
							</children>
						</HBox>
						<HBox>
							<children>
								<ToggleButton fx:id="typeHereButton"
									mnemonicParsing="false" prefHeight="30.0" prefWidth="85.0"
									styleClass="orderTypeButton" text="內用" />
								<ToggleButton fx:id="typeTakeOutButton"
									mnemonicParsing="false" prefHeight="30.0" prefWidth="85.0"
									styleClass="orderTypeButton" text="外帶" toggleGroup="$TypeGroup" />
								<ToggleButton fx:id="typeDeliverButton"
									mnemonicParsing="false" prefHeight="30.0" prefWidth="85.0"
									styleClass="orderTypeButton" text="外送" toggleGroup="$TypeGroup" />

								<HBox>
									<children>

										<Label alignment="center" prefHeight="30.0" prefWidth="50.0"
											text="人數">
											<HBox.margin>
												<Insets left="50.0" />
											</HBox.margin>
										</Label>

										<ComboBox fx:id="peopleComboBox" prefHeight="30.0"
											prefWidth="70.0" promptText="1" />

									</children>
								</HBox>
							</children>
						</HBox>
					</children>
				</VBox>
			</top>
			<center>

				<GridPane alignment="center" hgap="10.0" prefHeight="560.0"
					styleClass="menuBackground" vgap="0">

					<children>
						<ScrollPane fitToWidth="true" hbarPolicy="NEVER"
							styleClass="menuBlockBackground" vbarPolicy="NEVER"
							GridPane.columnIndex="0" GridPane.rowIndex="0">
							<content>
								<VBox fx:id="menu1" alignment="CENTER_LEFT" prefWidth="280.0"
									spacing="20" styleClass="menuBlockBackground">
								</VBox>
							</content>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</ScrollPane>

						<ScrollPane fitToWidth="true" hbarPolicy="NEVER"
							styleClass="menuBlockBackground" vbarPolicy="NEVER"
							GridPane.columnIndex="1" GridPane.rowIndex="0">
							<content>
								<VBox fx:id="menu2" alignment="CENTER_LEFT" prefWidth="280.0"
									spacing="20" styleClass="menuBlockBackground">
								</VBox>
							</content>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</ScrollPane>

						<ScrollPane fitToWidth="true" hbarPolicy="NEVER"
							styleClass="menuBlockBackground" vbarPolicy="NEVER"
							GridPane.columnIndex="2" GridPane.rowIndex="0">
							<content>
								<VBox fx:id="menu3" alignment="CENTER_LEFT" prefWidth="280.0"
									spacing="20" styleClass="menuBlockBackground">
								</VBox>
							</content>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</ScrollPane>

						<ScrollPane fitToWidth="true" hbarPolicy="NEVER"
							styleClass="menuBlockBackground" vbarPolicy="NEVER"
							GridPane.columnIndex="3" GridPane.rowIndex="0">
							<content>
								<VBox fx:id="menu4" alignment="CENTER_LEFT" prefWidth="280.0"
									spacing="20" styleClass="menuBlockBackground">
								</VBox>
							</content>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</ScrollPane>
					</children>
					<columnConstraints>
						<ColumnConstraints />
						<ColumnConstraints />
						<ColumnConstraints />
						<ColumnConstraints />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints />
					</rowConstraints>
					<padding>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</padding>
				</GridPane>
			</center>
			<right>
				<FlowPane prefHeight="560.0" prefWidth="200.0"
					BorderPane.alignment="CENTER" styleClass="menuRightBottom">
					<children>
						<ListView fx:id="menulist">
							<padding>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</padding>
						</ListView>
						<AnchorPane prefHeight="40.0" prefWidth="240.0">
							<children>

								<Label fx:id="total_money_Label" prefHeight="30.0" text="總價"
									AnchorPane.leftAnchor="5.0" styleClass="moneyLabel">
									<padding>
										<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
									</padding>
								</Label>

								<ComboBox fx:id="discount_ComboBox" prefHeight="30.0"
									prefWidth="100.0" promptText="折扣選擇" AnchorPane.rightAnchor="0.0"
									AnchorPane.topAnchor="4.0" />
							</children>
						</AnchorPane>

						<Button fx:id="backButton" onAction="#PreviousPageButtonAction"
							prefHeight="45.0" prefWidth="130.0" styleClass="backButton" text="返回">
							<FlowPane.margin>
								<Insets left="60.0" top="10.0" />
							</FlowPane.margin>
						</Button>

						<Button fx:id="printButton" onAction="#PrintButtonAction"
							prefHeight="45.0" prefWidth="130.0" styleClass="okButton" text="列印">
							<FlowPane.margin>
								<Insets left="60.0" top="10.0" />
							</FlowPane.margin>
						</Button>
					</children>
				</FlowPane>
			</right>
		</BorderPane>
		<ProgressIndicator fx:id="myProgressIndicator"
			maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
			minWidth="-Infinity" prefHeight="50.0" prefWidth="50.0"
			AnchorPane.bottomAnchor="320.0" AnchorPane.leftAnchor="320.0"
			AnchorPane.rightAnchor="320.0" AnchorPane.topAnchor="320.0" />
	</children>
</AnchorPane>
