<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="application.order.MenuController"
	xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

	<padding>
		<Insets top="5" right="5" bottom="5" left="5" />
	</padding>

	<Label  fx:id="typeLabel" prefHeight="30.0" prefWidth="200.0"
		text="用餐型態" alignment="center_left" GridPane.columnIndex="0"
		GridPane.rowIndex="0" />

	<HBox spacing="100" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
		GridPane.columnIndex="0" GridPane.rowIndex="1">
		<children>
			<HBox>
				<ToggleButton mnemonicParsing="false" fx:id="typeHereButton"
					prefHeight="31.0" prefWidth="85.0" text="內用" toggleGroup="$TypeGroup" />
				<ToggleButton mnemonicParsing="false" fx:id="typeTakeOutButton"
					prefHeight="31.0" prefWidth="85.0" text="外帶" toggleGroup="$TypeGroup" />
				<ToggleButton mnemonicParsing="false" fx:id="typeDeliverButton"
					prefHeight="31.0" prefWidth="85.0" text="外送" toggleGroup="$TypeGroup" />
			</HBox>

			<ComboBox fx:id="peopleComboBox" layoutX="15.0" layoutY="33.0"
				prefWidth="200.0" promptText="1" />

			<Button prefHeight="30.0" prefWidth="200.0" fx:id="p_page"
				text="上一頁" onAction="#PreviousPageButtonAction" />

		</children>
	</HBox>

	<GridPane xmlns:fx="http://javafx.com/fxml"
		GridPane.columnIndex="0" GridPane.rowIndex="2" alignment="center"
		hgap="20" vgap="0">

		<children>
			<ScrollPane GridPane.columnIndex="0" GridPane.rowIndex="0">
				<VBox fx:id="menu1" spacing="20" prefHeight="500.0" minWidth="100"
					prefWidth="300.0" alignment="CENTER_LEFT">
				</VBox>
			</ScrollPane>

			<ScrollPane GridPane.columnIndex="1" GridPane.rowIndex="0">
				<VBox fx:id="menu2" spacing="20" prefHeight="500.0" prefWidth="300.0"
					alignment="CENTER_LEFT">
				</VBox>
			</ScrollPane>

			<ScrollPane GridPane.columnIndex="2" GridPane.rowIndex="0">
				<VBox fx:id="menu3" spacing="20" prefHeight="500.0" prefWidth="300.0"
					alignment="CENTER_LEFT">
				</VBox>
			</ScrollPane>
		</children>
	</GridPane>

	<Button GridPane.columnIndex="0" GridPane.rowIndex="3"
		prefHeight="30.0" prefWidth="200.0" fx:id="n_page" text="下一頁"
		alignment="bottom_center" onAction="#NextPageButtonAction" />

</GridPane>

